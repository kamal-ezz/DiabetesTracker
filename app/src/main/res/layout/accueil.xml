<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Accueil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/etatGlycemieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:text="Pas encore de mésures"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/smileEmojiImageView"
            android:layout_width="64dp"
            android:layout_height="89dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            app:srcCompat="@drawable/smile" />


        <ImageView
            android:id="@+id/sadEmojiImageView"
            android:layout_width="64dp"
            android:layout_height="89dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/sad" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="130dp"
            android:text="Rappel control après repas"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/countDownTextView"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="190dp"
            android:text="01:00:00"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/alarmeImageView"
            android:layout_width="64dp"
            android:layout_height="89dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="170dp"
            app:srcCompat="@drawable/alarme" />

        <ImageView
            android:id="@+id/resetImageView"
            android:layout_width="64dp"
            android:layout_height="90dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="170dp"
            android:tag="resetRappel"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/reset" />

        <ImageView
            android:id="@+id/startImageView"
            android:layout_width="64dp"
            android:layout_height="89dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="170dp"
            android:alpha="1"
            android:tag="startRappel"
            app:srcCompat="@drawable/start" />

        <ImageView
            android:id="@+id/pauseImageView"
            android:layout_width="64dp"
            android:layout_height="89dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="170dp"
            android:alpha="1"
            android:tag="pauseRappel"
            android:visibility="invisible"
            app:srcCompat="@drawable/pause" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="270dp"
            android:text="En cas d'urgence"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/urgenceListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="320dp" />
    </RelativeLayout>
</FrameLayout>
